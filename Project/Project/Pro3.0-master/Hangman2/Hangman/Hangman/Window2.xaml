<Window x:Class="Hangman.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman"
        mc:Ignorable="d"
        Title="Register" Height="500" Width="525" WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Foreground="Green" Height="23" Margin="310,86,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="170" FontFamily="Century Gothic" GotFocus="txtUsername_GotFocus"/>
        <Label x:Name="label" Content="Enter a unique username" HorizontalAlignment="Left" Margin="48,84,0,0" Foreground="Green" VerticalAlignment="Top" Width="164" FontFamily="Century Gothic"/>
        <Button x:Name="btnAdd" Content="Add me" Background="Black" HorizontalAlignment="Left" Foreground="Green" Margin="213,192,0,0" VerticalAlignment="Top" Width="75" FontFamily="Century Gothic" Height="25" Click="btnAdd_Click"/>
        <Button x:Name="btnHelp" Content="Help" Background="Black" HorizontalAlignment="Left" Margin="385,329,0,0" Foreground="Green" VerticalAlignment="Top" Width="75" FontFamily="Century Gothic" Click="btnHelp_Click"/>

    </Grid>
</Window>
